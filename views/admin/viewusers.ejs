<section>

<div class="container">
    <table class="table"id="userstable">
  <thead>
    <tr>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone No</th>
      <th scope="col">Status</th>
    </tr>
  </thead>
  <tbody>
    <% for(var user of users) { %>
    <tr>
      <td><%= user.firstName %></td>
      <td><%= user.lastName %></td>
      <td><%= user.email%></td>
      <td><%= user.contactNo %></td>
      <% if(user.status) { %>
      <td><span class="alert-success"> Active</span>
        <td> <a href="/admin/block-user/<%= user._id %>" class="btn btn-danger " onclick="return confirm('do you want to block <%=user.firstName %>')">Block</a></td>
       
       <% } else { %> 
        <td><span class="alert-danger"> Not Active</span>
       <td><a href="/admin/unblock-user/<%= user._id %>" class="btn btn-success btn-sm " >Unblock</a> </td>
      <% } %>
      

    </tr>
    <% } %>
    
  </tbody>
</table>
</div>
</section>
<script>
  $(document).ready( function () {
    $('#userstable').DataTable();
} );
</script>
</section>