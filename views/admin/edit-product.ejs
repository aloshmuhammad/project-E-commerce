<section class="content-main">
    <div class="row">
        <div class="col-9">
            <div class="content-header">
                <h2 class="content-title">EDIT Products</h2>
               
            </div>
        </div>
        <form action="/admin/edit-product" method="post" enctype="multipart/form-data" >
            
        <div class="col-lg-6">
           
            <div class="card mb-4">
                <div class="card-body">
                    
                    <div class="mb-4">
                        <label for="product_title" class="form-label">Product title</label>
                        <input type="text" placeholder="Type here" class="form-control" id="product_title" name="title" value="<%=products.title%>">
                        <input type="text" name="id" value="<%= locals.products._id %>" style="display: none;">
                    </div>
                    <div class="row gx-3">
                       
                        <div class="col-md-4  mb-3">
                            <label for="product_title" class="form-label">Product color</label>
                            <input type="text" placeholder="Type here" class="form-control" id="product_color" name="color" value="<%=products.color%>">
                        </div>
                        <div class="col-md-4  mb-3">
                            <label for="product_title" class="form-label">Product Size</label>
                            <input type="text" placeholder="Type here" class="form-control" id="product_size" name="size" value="<%=products.size%>">
                        </div>
                    </div>
                    <div class="mb-4">
                        <label for="product_title" class="form-label">Product Brand</label>
        
                        <input type="text" placeholder="Type here" class="form-control" id="product_brand"name="brand" value="<%=products.brand%>">
                    </div>
                    <div class="col-md-4  mb-3">
                        <label for="product_title" class="form-label">Product Price</label>
                        <input type="text" placeholder="Type here" class="form-control" id="product_color" name="price" value="<%=products.price%>">
                    </div>
                    <div class="col-md-4  mb-3">
                        <label for="product_title" class="form-label">Stock</label>
                        <input type="text" placeholder="Type here" class="form-control" id="product_stock" name="stock" value="<%=products.stock%>">
                    </div>
                </div>
            </div> <!-- card end// -->
            <div class="card mb-4">
                <div class="card-body">
                    <div>
                        <label for="product_title" class="form-label">Description</label>
                        <textarea placeholder="Type here" class="form-control" rows="4" name="description" value="<%=products.description%>"></textarea>
                    </div>
                  
                </div>
            </div> <!-- card end// -->
            <div class="card mb-4">
                <div class="card-body">
            
            <h5 class="mb-3">Categories</h5>
            <% for( var category of categories) { %>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="<%= category.name %>" id="product-cat" name="category">
                <label class="form-check-label" for="product-cat"><%= category.name %></label>
            </div>
            
            <% } %>
            <div class="card mb-4">
                <div class="card-body">
                    <div>
                        <label for="product_title" class="form-label">Product Image</label>
                        <div class="d-flex gap-3 mb-3">
                            <div >
                                
                                    <img src="/ad asset/productImages/<%= products.productImage[0] %>" style="height: 60px; width: 80px;" id="file-ip-0-preview">
                                </div>
                                   <div>
                                        <img src="/ad asset/productImages/<%= products.productImage[1] %>" style="height: 60px; width: 80px;" id="file-ip-1-preview">
                                    </div>
                                        <div>
                                            <img src="/ad asset/productImages/<%= products.productImage[2] %>" style="height: 60px; width: 80px;" id="file-ip-2-preview">
                                        </div>
                                            <div>
                                                <img src="/ad asset/productImages/<%= products.productImage[3] %>" style="height: 60px; width: 80px;" id="file-ip-3-preview">
                                            </div>
                                        </div>
                                 
<!--                         
                      <img src="/ad asset/productImages/<%= products.productImage[0] %>" class="img-sm img-thumbnail" alt="Item">
                      <img src="/ad asset/productImages/<%= products.productImage[1] %>" class="img-sm img-thumbnail" alt="Item">
                      <img src="/ad asset/productImages/<%= products.productImage[2] %>" class="img-sm img-thumbnail" alt="Item">
                      <img src="/ad asset/productImages/<%= products.productImage[3] %>" class="img-sm img-thumbnail" alt="Item"> -->
                    </div>
                    <input type="file" id="file-ip-1" accept="image/*" onchange="showPreview(event,0)" name="img0" >
                    <input type="file" id="file-ip-1" accept="image/*" onchange="showPreview(event,1)" name="img1" >
                    <input type="file" id="file-ip-1" accept="image/*" onchange="showPreview(event,2)" name="img2" >
                    <input type="file" id="file-ip-1" accept="image/*" onchange="showPreview(event,3)" name="img3" >

                        <!-- <input class="form-control" name="productImage" type="file" name="img0">
                        <input class="form-control" name="productImage" type="file" name="img1">
                        <input class="form-control" name="productImage" type="file" name="img2">
                        <input class="form-control" name="productImage" type="file" name="img3">
                         -->

                    </div>
                </div>
            </div> <!-- card end// -->
        
        </div>

        
                        <button type="submit" class="btn btn-md rounded font-sm hover-up">Publish</button>
                    </div>
                 
            </div> <!-- card end// -->
           
        </div>
       
    </div>
    <div>
        
    </div>
        </form>
</section>
<script>
    function showPreview(event,i){
  if(event.target.files.length > 0){
    var src = URL.createObjectURL(event.target.files[0]);
    var preview = document.getElementById(`file-ip-${i}-preview`);
    preview.src =src;
    preview.style.display = "block";
  
}
     }
</script>
