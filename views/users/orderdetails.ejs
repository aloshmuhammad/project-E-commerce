<main class="main">
    <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
        <div class="container">
            <h1 class="page-title">ORDER DETAILS</h1>
        </div><!-- End .container -->
    </div><!-- End .page-header -->


    <div class="page-content">
        <div class="cart">
            <div class="container">
                <div class="row">
                    <div class="col-lg-9">
                        <table class="table table-cart table-mobile">
                            
                           
                                
                                
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Color</th>
                                    <th>Quantity Ordered</th>
                                    
                                </tr>
                            </thead>
                            <% orderedproducts.forEach(order=> { %>
                            <tbody>
                                
                                <tr>
                                    <td class="product-col">
                                        
                                        <div class="product">
                                            <figure class="product-media">
                                                <a href="#">
                                                    <img src="/ad asset/productImages/<%= order.product.productImage[0] %>" alt="Product image">
                                                </a>
                                            </figure>

                                            <h3 class="product-title">
                                                
                                                <a href="#"  style="color: black;"><%=order.product.title%></a>
                                            </h3><!-- End .product-title -->
                                        </div><!-- End .product -->
                                    </td>
                                    <td class="price-col" style="color: black;"> <%=order.product.price%></td>
                                    <td class="price-col" style="color: black;"> <%=order.product.color%></td>
                                    <td class="price-col"style="color: black;"> <%=order.quantity%></td>
                                    
           
         

                                       
                        
                                   
                                  
                                    
                                </tr>
                                
                    
                            
                                
                           
                             
                           
                            </tbody>
                            <% })%>
                           
                        </table><!-- End .table table-wishlist -->

                     
                    </div><!-- End .col-lg-9 -->
                    
                    <aside class="col-lg-3 d-grid">
                        <div class="summary summary-cart ">
	                				

	                				<a href="" class="btn btn-outline-primary-2 btn-order btn-block"onclick="cancelorder('<%=orderedproducts[0]._id%>')">Cancel Order</a>
                                     <%if(locals.diffDays<=7 ){%>
                                    
                        
                                    <a href="/orderReturn/<%=orderedproducts[0]._id%>" class="btn btn-outline-primary-2 btn-order btn-block">Return Order</a>
                                  <%}%>
                                       
	                			</div><!-- End .summary -->
                           
                       

                        <a href="/" class="btn btn-outline-dark-2 btn-block mb-3"><span>CONTINUE SHOPPING</span><i class="icon-refresh"></i></a>
                    </aside><!-- End .col-lg-3 -->
                   
                  
                </div><!-- End .row -->
            </div><!-- End .container -->
        </div><!-- End .cart -->
    </div><!-- End .page-content -->
</main><!-- End .main -->
<script>
    function cancelorder(orderId)
    {
        $.ajax({
            url:'/cancel-order',
            data:{
                orders:orderId
            },
            method:'post',
            success:(response)=>
            {
                
                console.log(response);
                if(response.cancelItem)
                {
                    swal('Order Cancelled Please Continue Shopping')
                    location.reload()
                }
            }

    })
}
</script>