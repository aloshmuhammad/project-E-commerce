<script>
   function validationSignup(){
        const fName = document.getElementById('fName')
        const lName = document.getElementById('lName')
        const email = document.getElementById('email')
        const password = document.getElementById('password')
        const confirmPassword = document.getElementById('confirmPassword')
        const mobile = document.getElementById('mobile')
        const fNameValue = fName.value.trim()
        const lNameValue = lName.value.trim()
        const emailValue = email.value.trim()
        const passwordValue = password.value.trim()
        const confirmPasswordValue = confirmPassword.value.trim()
        const mobileValue = mobile.value.trim()
        const error1 = fName.parentElement.querySelector('p')
        const error2 = lName.parentElement.querySelector('p')
        const error3 = email.parentElement.querySelector('p')
        const error4 = password.parentElement.querySelector('p')
        const error5 = confirmPassword.parentElement.querySelector('p')
        const error6 = mobile.parentElement.querySelector('p')

        let flag = 1
        error1.innerText="" 
        error2.innerText=""   
        error3.innerText="" 
        error4.innerText="" 
        error5.innerText="" 
        error6.innerText=""

               /////////////////////////////////First Name Validation////////////////////////
               if(fNameValue == ""){
            error1.innerText = "This field is required"
            flag=2
        }
       else if(fNameValue.length <= 2){
            error1.innerText = "First name must be minimum 2 characters"
            flag=2
       }
       else if(!fNameValue.match(/^[a-zA-Z]+(([',. -][a-zA-Z ])?[a-zA-Z]*)*$/)){
            error1.innerText = "Enter valid details"
            flag=2
       }
       
       /////////////////////////////////Last Name Validation////////////////////////
       if(lNameValue == ""){
            error2.innerText = "This field is required"
            flag=2
        }
       else if(!lNameValue.match(/^[a-zA-Z]+(([',. -][a-zA-Z ])?[a-zA-Z]*)*$/)){
            error2.innerText = "Enter valid details"
            flag=2
       }
       
       ///////////////////////////////Email Validation//////////////////////////////
       if(emailValue == ""){
            error3.innerText = "This field is required"
            flag=2
       }else if(!emailValue.match(/^(([^<>()[\]\\.,;:\s@"]+(\.[^<>()[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/)){
            error3.innerText = "Enter a valid email"
            flag=2
       }
      
        ///////////////////////////////Password Validation//////////////////////////////
       if(passwordValue == ""){
            error4.innerText = "This field is required"
            flag=2
       }
       else if(passwordValue.length < 8){
            error4.innerText = "Must be minimum 8 characters"
            flag=2
       }
    //    else if(!passwordValue.match(/^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{8,}$/)){
    //         error4.innerText = "Password should contain atleast one letter and one number"
    //         error4.style.textAlign='end'
    //         flag=2
    //    }
      
       ///////////////////////////////Confirm Password Validation//////////////////////////////
       if(confirmPasswordValue == ""){
            error5.innerText = "This field is required"
            flag=2
       }
       else if(confirmPasswordValue !== passwordValue){
            error5.innerText = "Enter password correctly"
            flag=2
       }
       
       ///////////////////////////////Mobile Number Validation//////////////////////////////
       if(mobileValue==""){
            error6.innerText = "This field is required"
            flag=2
       }
       else if(!mobileValue.match(/^(\+\d{1,3}[- ]?)?\d{10}$/) && ! (mobileValue.match(/0{5,}/)) ){
            error6.innerText = "Enter a valid mobile number"
            flag=2
       }
       if(flag == 1){
        submitSignup(fNameValue,lNameValue,emailValue,passwordValue,mobileValue)
       }
    }
