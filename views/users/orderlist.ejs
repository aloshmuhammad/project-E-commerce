<section class="content-main">
    <div class="content-header">
        <div class="page-header text-center" style="background-image: url('/assets/images/page-header-bg.jpg')">
            <div class="container">
                <h1 class="page-title">My orders</h1>
            </div><!-- End .container -->
        </div>
        <!-- <div class="text-center">
            <h2 class="content-title card-title"></h2>
        </div> -->
        <!-- <div>
            <input type="text" placeholder="Search Categories" class="form-control bg-white">
        </div> -->
    </div>
    <% if(orders.length!=0) { %>
            

              
        <div class="card mr-3 m-0 p-0 " >
        <div class="card-body p-0 m-0">
            <div class="row  p-0 m-0"> 
                <div class="col-md-12 p-0 m-0  ">
                    <div class="table-responsive ">
                        <table class="table table-hover p-0 m-0">
                            <thead class="col-sm-4 p-0 m-0">
                                <tr class="text-center p-0 m-0 ">
                                 
                                
                                    
                                    <th style="color: black; font-size: medium;"> <b> Ordered Date</b></th>
                                
                                    <th style="color: black;font-size: medium;"> <b> Order Price</b></th>
                                    <th style="color: black;font-size: medium;"><b>Payment Method</b></th>
                                    <th style="color: black;font-size: medium;"><b>Status</b></th>
                                    
                                    <th class="text-center" style="color: black;font-size: medium;"><b>Action</b></th>
                                </tr>
                            </thead>
                            <% orders.forEach(order=>{ %>
                            <tbody class="col-sm-4 p-0 m-0">

                               
                                <tr class="text-center ">
                                  
                                    
                                    
                                    
                                    <td style="font-size: small;"><strong><%=order.date %></strong></td>
                                    <td style="color: black;">Rs.<%= order.totalAmount %></td>
                                    <td style="color: black;"><%= order.paymentmethod %></td>
                                    <td style="color: brown;"><%= order.status %></td>

                                    <td class="text-center text">
                                        <a href="/orderdetails/<%=order._id%>" class="btn  btn-primary">View Order</a>
                                        

                                    </td>
                                    <td class="text-center text">
                                   
                                    </td>
                                </tr>
                              
                               
                            </tbody>
                            <% }) %>
                        </table>
                    </div>
                </div> <!-- .col// -->
            </div >
        </div>
    </div>
    <%} else {%>
        <div class="row">
            <div class="col-lg-12 text-center">
              <h1 class=" mt-4 mx-1 mb-3 ml-20">NO ORDERS YET PLEASE</h1>
            </div>
          </div>
          <div class="text-center">
          
            <a href="/" class="btn btn-outline-dark-2 btn-block mb-3 w-50"><span>CONTINUE
                SHOPPING</span><i class="icon-refresh"></i></a>
                <% }  %>
            </div>
            </div> <!-- .row // -->
        </div> <!-- card body .// -->
    </div> <!-- card .// -->
</section> <!-- content-main end// -->

